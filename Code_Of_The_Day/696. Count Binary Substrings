class Solution {
    public int countBinarySubstrings(String s) {
        
        int n = s.length();

        int prevCount = 0;
        int currentCount = 1;
        int result = 0;

        for(int i = 1; i< n; i++){
            if(s.charAt(i) == s.charAt(i-1)){
                currentCount ++;
            } else{
                result = result + Math.min(prevCount, currentCount);
                prevCount = currentCount;
                currentCount = 1;
            }
        }

        return result + Math.min(prevCount, currentCount);
    }
}
